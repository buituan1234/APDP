@model SIMS.Models.Admin

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Karla:400,700&display=swap');

        .font-family-karla {
            font-family: karla;
        }
    </style>
</head>
<body class="bg-white font-family-karla h-screen">

    <div class="w-full flex flex-wrap">

        <!-- Login Section -->
        <div class="w-full md:w-1/2 flex flex-col">

            <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-24">
                <a class="navbar-brand" href="#">
                    <img src="/User/images/logo.png" alt="">
                </a>
            </div>

            <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
                <p class="text-center text-3xl">Admin.</p>
                <form class="flex flex-col pt-3 md:pt-8" asp-action="Login" method="post">
                    <div class="flex flex-col pt-4">
                        <label asp-for="UserName" class="text-lg">Username</label>
                        <input asp-for="UserName" placeholder="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" />
                        <Span asp-validation-for=@Model.UserName class="text-danger"></Span>
                    </div>

                    <div class="flex flex-col pt-4">
                        <label asp-for="Password" class="text-lg">Password</label>
                        <input asp-for="Password"  type="password" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                        <Span asp-validation-for=@Model.Password class="text-danger"></Span>
                    </div>

                    <div class="flex flex-col pt-4">               
                        <Span class="text-danger">@ViewBag.ErrorMessage</Span>
                    </div>
                    <input type="submit" value="Log In" class="bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8">
                </form>
                <div class="text-center pt-12 pb-12">
                    <p>Signin with <a asp-action="Login" asp-controller="Students" class="underline font-semibold">Student</a></p>
                </div>
            </div>

        </div>

        <!-- Image Section -->
        <div class="w-1/2 shadow-2xl">
            <img class="object-cover w-full h-screen hidden md:block" src="~/image/composition-with-office-tools-desk.jpg">
        </div>
    </div>

</body>
</html>